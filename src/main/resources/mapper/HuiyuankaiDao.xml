<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.code.dao.HuiyuankaiDao">

	<resultMap type="com.code.entity.Huiyuankai"
		id="HuiyuankaiMap">
		<result property="hid" column="hid" jdbcType="INTEGER" />
		<result property="hykkh" column="hykkh" jdbcType="VARCHAR" />
		<result property="hykdjid" column="hykdjid" jdbcType="INTEGER" />
		<result property="hyktime" column="hykTime"
			jdbcType="TIMESTAMP" />
	</resultMap>

	<!--查询单个 -->
	<select id="queryById" resultMap="HuiyuankaiMap">
		select
		hid,hykkh, hykdjid,
		hykTime
		from clothesppsdb.huiyuankai
		where hid = #{hid}
	</select>

	<!--查询所有的数据 -->
	<select id="selectAll" resultMap="HuiyuankaiMap">
		select
		hid,hykkh, hykdjid,
		hykTime
		from clothesppsdb.huiyuankai
	</select>

	<!--通过实体作为筛选条件查询 -->
	<select id="queryAll" resultMap="HuiyuankaiMap">
		select
		hid,hykkh, hykdjid, hykTime
		from clothesppsdb.huiyuankai
		<where>
			<if test="hid != null and hid != ''">
				and hid = #{hid}
			</if>
			<if test="hykkh != null and hykkh != ''">
				and hykkh = #{hykkh}
			</if>
			<if test="hykdjid != null">
				and hykdjid = #{hykdjid}
			</if>
			<if test="hyktime != null">
				and hykTime = #{hyktime}
			</if>
		</where>
	</select>

	<!--新增所有列 -->
	<insert id="insert" keyProperty="hykkh" useGeneratedKeys="true">
		insert
		into clothesppsdb.huiyuankai(hykdjid, hykTime)
		values (#{hykdjid},
		#{hyktime})
	</insert>

	<!--通过主键修改数据 -->
	<update id="update">
		update clothesppsdb.huiyuankai
		<set>
			<if test="hid != null">
				hid = #{hid},
			</if>
			<if test="hykdjid != null">
				hykdjid = #{hykdjid},
			</if>
			<if test="hyktime != null">
				hykTime = #{hyktime},
			</if>
		</set>
		where hykkh = #{hykkh}
	</update>

	<!--通过主键删除 -->
	<delete id="deleteById">
		delete from clothesppsdb.huiyuankai where hid =
		#{hid}
	</delete>

</mapper>